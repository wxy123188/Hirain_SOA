            android:layout_height="35dp"
            android:layout_marginLeft="650dp"
            android:layout_marginTop="290dp"
            android:background="@mipmap/yin00" />

    </RelativeLayout>
<!--后视镜-->
    <RelativeLayout
        android:id="@+id/carsetfragment_seat_layout_rearview"
        android:layout_width="1320dp"
        android:layout_height="500dp"
        android:layout_below="@id/save_new_mode_lin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/carset_layout_bur"
        android:visibility="gone">


        <TextView
            android:id="@+id/rm_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            android:text="后视镜"
            android:textColor="#FFF"
            android:textSize="32sp" />


        <com.flyco.tablayout.SegmentTabLayout
            android:layout_below="@id/rm_type_tv"
            android:id="@+id/rm_type"
            android:layout_width="543dp"
            android:layout_height="72dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/caeset_h_z_d_brun"
            android:padding="4dp"
            tl:tl_textsize="24sp"
            android:layout_gravity="center_horizontal"
            tl:tl_bar_stroke_width="0dp"
            tl:tl_indicator_color="@color/dialog_start_bg"
            tl:tl_textSelectColor="@color/white"
            tl:tl_textUnselectColor="@color/white"
            tl:tl_indicator_anim_enable="true"
            tl:tl_indicator_bounce_enable="true"
            tl:tl_tab_space_equal="true"/>


        <TextView
            android:id="@+id/rm_direction_tv"
            android:layout_below="@id/rm_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="82dp"
            android:gravity="center"
            android:text="后视镜选择"
            android:textColor="#FFF"
            android:textSize="32sp" />

        <com.flyco.tablayout.SegmentTabLayout
            android:layout_below="@id/rm_direction_tv"
            android:id="@+id/rm_direction"
            android:layout_width="543dp"
            android:layout_height="72dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/caeset_h_z_d_brun"
            android:padding="4dp"
            tl:tl_textsize="24sp"
            android:layout_gravity="center_horizontal"
            tl:tl_bar_stroke_width="0dp"
            tl:tl_indicator_color="@color/dialog_start_bg"
            tl:tl_textSelectColor="@color/white"
            tl:tl_textUnselectColor="@color/white"
            tl:tl_indicator_anim_enable="true"
            tl:tl_indicator_bounce_enable="true"
            tl:tl_tab_space_equal="true"/>

        <RadioGroup
            android:visibility="gone"
            android:id="@+id/zuoyouhsj"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginLeft="756dp"
            android:layout_marginTop="337dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/zuohoushijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:checked="true"
                />

            <RadioButton
                android:id="@+id/youhoushijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:gravity="center"

                />

        </RadioGroup>

        <TextView
            android:id="@+id/rm_adjust_tv"
            android:layout_toRightOf="@id/rm_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="106dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="镜面角度调节"
            android:textColor="#FFF"
            android:textSize="32sp" />


        <Button
            android:layout_toRightOf="@id/rm_adjust_tv"
            android:id="@+id/jingshang"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/rearview_mirror_selectortop"
            />

        <Button
            android:layout_below="@id/jingshang"
            android:layout_toLeftOf="@id/jingyou"
            android:id="@+id/jingzuo"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginRight="115dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rearview_mirror_selectorleft"
            />

        <Button

            android:layout_toRightOf="@id/rm_adjust_tv"
            android:layout_below="@id/jingshang"
            android:id="@+id/jingxia"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="121dp"
            android:background="@drawable/rearview_mirror_selectorbottom"
            />

        <Button
            android:layout_toRightOf="@id/jingshang"
            android:layout_below="@id/jingshang"
            android:id="@+id/jingyou"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rearview_mirror_selectorright"
            />

        <ImageView

            android:id="@+id/rm_close_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rm_set_bg"

            />


    </RelativeLayout>
<!--座椅-->
    <RelativeLayout
        android:id="@+id/carsetfragment_lamplight_layout_seat"
        android:layout_width="1320dp"
        android:layout_height="500dp"
        android:layout_below="@id/save_new_mode_lin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/carset_layout_bur"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="座椅"
            android:textSize="32sp"
            android:textColor="#fff"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="80dp"
            />
        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/chair_type"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/caeset_h_z_d_brun"
            android:padding="4dp"
            tl:tl_textsize="24sp"
            android:layout_centerInParent="true"
